{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "installCommand": "npm install",
                "buildCommand": "npm run build"
            }
        },
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "/api/index.js" },
        { "src": "/(.*)", "dest": "/index.html" }
    ],
    "env": {
        "MONGODB_URI": "${MONGODB_URI}",
        "JWT_SECRET": "${JWT_SECRET}",
        "NODE_ENV": "production"
    }
}